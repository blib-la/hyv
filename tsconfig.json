{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "target": "ES2022",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@hyv/core": ["./packages/core/src"],
      "@hyv/openai": ["./packages/openai/src"],
      "@hyv/store": ["./packages/store/src"],
      "@hyv/utils": ["./packages/utils/src"],
      "@hyv/stable-diffusion": ["./packages/stable-diffusion/src"]
    },
    "baseUrl": "."
  },
  "include": ["./types/*.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["./node_modules"]
}

{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "ES2022",
      "dom"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "target": "ES2022",
    "typeRoots": ["node_modules/@types", "./types"],
    "baseUrl": "."
  },
  "include": ["packages/**/*.d.ts", "packages/**/*.ts", "packages/**/*.tsx", "examples/*.ts"],
  "exclude": ["/**/node_modules", "/node_modules"]
}
